<h1>Listing pages</h1>

<br />
<% @grouped_pages = @pages.group_by{|page| page.type} %>
<% @grouped_pages.each do |type, pages| %>
  <div class="pagetype">
  <% pages.each do |page| %>
    <div>
      <div><%= link_to page.title, page.url %></div>
      <div><%= page.host %></div>
      <div><%= link_to 'remove', page, confirm: 'Are you sure?', method: :delete %></div>
    </div>
  <% end %>
  </div>
<% end %>

